<div class="container">
  <% if @recent_transactions.any? %>
    <div lass="row">
      <div class="col-xs-12">
        <div class="well">Transactions available from <%= DateTime.strptime(@first_transaction.unix_time.to_s, '%s').strftime('%F') %> to <%= DateTime.strptime(@last_transaction.unix_time.to_s, '%s').strftime('%F') %> (<%= @transaction_count %> total transactions)</div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Korbit Transaction Plot</h3>
          </div>
          <div class="panel-body">
            <div class="candlestick-plot-container">
              <div id="chart_div" class="candlestick-plot"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
    var data = google.visualization.arrayToDataTable(<%=raw @recent_transactions %>, true);
    var options = {
      legend:'none',
      hAxis: {title: 'Transaction Interval (Unix Time)',  titleTextStyle: {color: '#333'}, textStyle : { fontSize: 10 }},
      vAxis: {title: 'Transaction Value (Korean Won)',  titleTextStyle: {color: '#333'}},
      explorer: {axis: 'horizontal', keepInBounds: true},
      bar: {groupWidth: '90%'}
    };
    var chart = new google.visualization.CandlestickChart(document.getElementById('chart_div'));
    chart.draw(data, options);
  }
</script>
